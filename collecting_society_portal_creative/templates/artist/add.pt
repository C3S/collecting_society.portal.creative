<tal:block metal:use-macro="backend" i18n:domain="collecting_society_portal_creative">

    <!-- content left -->
    <tal:block metal:fill-slot="content-left"></tal:block>

    <!-- content middle -->
    <tal:block metal:fill-slot="content-middle">

        <div>
            <a class="btn btn-default btn-lg center-block"
               href="${request.resource_path(context, 'solo')}"
               role="button"
               i18n:translate="">Add Solo Artist</a>
        </div>
        <div>
            <a class="btn btn-default btn-lg center-block"
               href="${request.resource_path(context, 'group')}"
               role="button"
               i18n:translate="">Add Group Artist</a>
        </div>

    </tal:block>

    <!-- content right -->
    <tal:block metal:fill-slot="content-right"></tal:block>

</tal:block>